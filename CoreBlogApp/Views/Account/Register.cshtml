@model Entity.Concrate.Writer
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Themes/MainTheme/js/jquery-2.2.3.min.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Yazar Kayıt Sayfası</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(x => x.WriterName, "Ad")
                            @Html.TextBoxFor(x => x.WriterName, new { @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(x => x.WriterName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(x => x.WriterSurname, "Soyad")
                            @Html.TextBoxFor(x => x.WriterSurname, new { @class = "form-control", @required = true })
                            @Html.ValidationMessageFor(x => x.WriterSurname, "", new { @class = "text-danger" })


                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">

                            @Html.LabelFor(x => x.WriterMail, "Mail")
                            @Html.TextBoxFor(x => x.WriterMail, new { @class = "form-control", @required = true, @type = "email" })
                            @Html.ValidationMessageFor(x => x.WriterMail, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group col-md-6">

                            @Html.LabelFor(x => x.WriterPassword, "Şifre")
                            @Html.TextBoxFor(x => x.WriterPassword, new { @class = "form-control", @required = true, @type = "password", @id = "password1" })
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new { @class = "text-danger" })


                        </div>


                    </div>
                    <button type="submit" class="btn btn-primary btn-block submit mb-4">Kayıt Ol</button>
                    <p class="text-right">Zaten bir hesabın var mı ? O halde <a href="/Account/Login/"> Giriş Yap</a></p>

                }

            </div>
        </div>
    </div>
</section>

<button class="btn btn-danger" id="btn1">button</button>

<script>
    $("#btn1").click(function () {
        swal("Kayıt Başarılı", "", "success");
    });
</script>

